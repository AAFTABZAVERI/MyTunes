<!DOCTYPE html>
<html>
<head>
<title>MyTunes Artist</title>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://kit.fontawesome.com/e35a902f27.js" crossorigin="anonymous"></script>
<style>
    /*    Generated by http://www.cssportal.com    */

@import url("reset.css");


</style>
{{> style}}

</head>
<body>
    <div id="wrapper">
    {{> header}}
    <div class="split left">
    <div class="nav">
        <nav class="sidebar">
            <!-- Avatar image in top left corner -->
    
          <a {{#if user}}href="/newuser"{{else}}href="/"{{/if}} title="Home">
            <i class="fa fa-home"></i>
            {{!-- <p>HOME</p> --}}
          </a>
          <a href="/newuser/library" title="Playlist">
            <i class="fa fa-play-circle-o"></i>
            {{!-- <p>Playlist</p> --}}
          </a>

          <a href="/newuser/addplaylist" title="Add new Playlist">
            <i class="fa fa-plus-square-o"></i>
            {{!-- <p>Add Playlist</p> --}}
          </a>
          
        </nav>
    </div>
</div>
	
<div class="split right">
<div class="contain">

            <!--artist search-->
     <div>
          <h1 style="font-size:xx-large; text-align: center; color:aliceblue; font-weight: bold; margin-top:10px;">Artists</h1>
        
           {{#each ar}}        
        <div class="music-card newreimg">
            <a href="/artistalbum/{{this.id}}" class="links">
                {{#each_upto this.images 1}}
                <center>
                      <div class="">
                          {{#if this.url}}
                            <img class="rimage" id="songImageOne" src="{{this.url}}" alt="Card image cap">
                          {{else}}
                            <img class="rimage" id="songImageOne" src="images/Logo.png" alt="artist default image">                          {{/if}}
                      </div>
                </center>
                {{/each_upto}}
            </a>
            <div>
                <center>
                  <a href="/artistalbum/{{this.id}}" class="links">
                <marquee width=80% onMouseOver="javascript:stop()"  onMouseOut="javascript:start()"  direction="left" behavior="scroll" dir="ltr" height="30%" hspace="10" loop scrolldelay=50>
                <h5 class="album-name pt-4 pb-2" id="songNameOne" value="{{this.name}}">{{this.name}}</h5>
                </marquee>
                </a>
                </center>
                
            </div>
            </div>
            {{/each}}
     </div>
    </div>
	
	
	</div>
    </div>
	 <script>
     function myFunction() {
  document.getElementById("myDropdown").classList.toggle("show");
}

// Close the dropdown menu if the user clicks outside of it
window.onclick = function(event) {
  if (!event.target.matches('#myimg')) {
    var dropdowns = document.getElementsByClassName("dropdown-content");
    var i;
    for (i = 0; i < dropdowns.length; i++) {
      var openDropdown = dropdowns[i];
      if (openDropdown.classList.contains('show')) {
        openDropdown.classList.remove('show');
      }
    }
  }
}
 </script> 
</body>
</html>
